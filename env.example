# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================
APP_NAME=TaskManagementSystem
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

# ===========================================
# SEGURANÇA DA API
# ===========================================
API_KEY=base64:your-app-key-here

# ===========================================
# BANCO DE DADOS MYSQL
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=task_management
DB_USERNAME=task_app_user
DB_PASSWORD=secure_password_123

# ===========================================
# BANCO DE DADOS MONGODB
# ===========================================
MONGODB_CONNECTION=mongodb
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=task_logs
MONGODB_USERNAME=task_app_user
MONGODB_PASSWORD=secure_password_123

# ===========================================
# CACHE E FILA REDIS
# ===========================================
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_HOST=redis
REDIS_PASSWORD=123
REDIS_PORT=6379

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# CONFIGURAÇÕES DO DOCKER - MYSQL
# ===========================================
MYSQL_ROOT_PASSWORD=root_password_123
MYSQL_DATABASE=task_management
MYSQL_USER=task_app_user
MYSQL_PASSWORD=secure_password_123

# ===========================================
# CONFIGURAÇÕES DO DOCKER - MONGODB
# ===========================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin_password_123
MONGO_INITDB_DATABASE=task_logs
